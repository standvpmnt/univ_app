<div class="row">
  <div class="col s12">
    <h2 class="center-align">Students Directory</h2>
  </div>
</div>

<div class="row">
  <% @students.each do |student| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= student.name %></span>
          <span class="card-content">Email: <%= student.email %></span>
          <div class="card-content">
            <p>Course Enrollments:
            <% if student.courses.empty? %>
              None
            <% else %>
              <ul>
                <% student.courses.each do |course| %>
                  <li><%= course.name %>
                <% end %>
              </ul>
            <% end %>
            </p>
          </div>
        </div>
        <div class="card-action">
          <a><%= link_to "View profile", student_path(student) %></a>
        </div>
      </div>
    </div>
  <% end %>
</div>
