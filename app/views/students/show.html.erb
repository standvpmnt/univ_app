<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <span class="card-content">Email: <%= @student.email %></span>
        <div class="card-content">
          <p>Course Enrollments: None</p>
        </div>
      </div>
    </div>
    <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
  </div>
</div>
